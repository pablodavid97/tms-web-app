        <div class="container meetings-container">
            <div class="page-header header-left">
                <div class="container">
                   <div class="row">
                      <div class="col-md-3">
                         <h1>Reuniones</h1>
                      </div>
                      <div class="btn-container col-md-3">
                        <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#createMeetingModal">Crear Reunión</button>
                      </div>
                   </div>
                </div>
             </div>

             <!-- Modal -->
             <div id="createMeetingModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form action="/create-meeting" method="post">
                            <div class="modal-header">
                                <h1 class="form-header header-left">Agendar Reunión</h1>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
            
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Reunión No: </label>
                                        <div class="col-sm-10">
                                            xxxxxxxx
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputMeetingSubject">Tema</label>
                                        <input name="meeting-subject" type="text" class="form-control" id="exampleInputSubject" placeholder="Ingresa el tema de la reunión">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputMeetingDescription">Descripción</label>
                                        <textarea name="meeting-description" class="form-control" id="inputMeetingDescription" rows="3" placeholder="Ingresa la descripción de la reunión"></textarea>
                                    </div>
                                    <div class="form-group form-check">
                                        <input name="meeting-email-notification" type="checkbox" class="form-check-input" id="meetingEmailCheck">
                                        <label class="form-check-label" for="meetingEmailCheck">Mandar notificaciones por correo</label>
                                    </div>
                                    <label for="meetingDatePicker">Fecha</label>
                                    <div class="row">
                                        <div class="form-group datepicker-container col-sm-6">
                                            <div class="input-group date">
                                                <input name="meeting-date" type="text" class="form-control">
                                                <span class="input-group-addon"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-3">
                                            <select name="meeting-time" class="custom-select">
                                                <option selected>9:00</option>
                                                <option value="1">9:00</option>
                                                <option value="2">10:00</option>
                                                <option value="3">11:00</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-sm-3">
                                            <select name="meeting-time-format" class="custom-select">
                                                <option selected>AM</option>
                                                <option value="1">AM</option>
                                                <option value="2">PM</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm-6">
                                            <label for="professorMeetingInput">Profesor</label>
                                            <input name="meeting-professor" type="text" id="professorMeetingInput" class="form-control" value="{{user.nombres}} {{user.apellidos}}" readonly>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            <label for="studentMeetingInput">Estudiante</label>
                                            <select name="meeting-student" class="custom-select">
                                                <option selected>--Estudiante--</option>
                                                {{#each students}}
                                                    <option value={{this.usuario_id}}>
                                                        {{this.nombres}} {{this.apellidos}}
                                                    </option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                
                            </div>
                            <div class="modal-footer meeting-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-primary">Crear Reunión</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


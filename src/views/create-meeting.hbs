        <div class="container meeting-container">
            <form action="">
                <h1 class="form-header">Agendar Reunión</h1>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Reunión No: </label>
                    <div class="col-sm-10">
                        xxxxxxxx
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputMeetingSubject">Tema</label>
                    <input type="text" class="form-control" id="exampleInputSubject" placeholder="Ingresa el tema de la reunión">
                </div>
                <div class="form-group">
                    <label for="inputMeetingDescription">Descripción</label>
                    <textarea class="form-control" id="inputMeetingDescription" rows="3" placeholder="Ingresa la descripción de la reunión"></textarea>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="meetingEmailCheck">
                    <label class="form-check-label" for="meetingEmailCheck">Mandar notificaciones por correo</label>
                  </div>
                  <label for="meetingDatePicker">Fecha</label>
                  <div class="row">
                    <div class="form-group datepicker-container col-sm-6">
                        <div class="input-group date">
                            <input type="text" class="form-control">
                            <span class="input-group-addon"><i class="far fa-calendar-alt"></i></span>
                        </div>
                    </div>
                    <div class="form-group col-sm-3">
                        <select class="custom-select">
                            <option selected>9:00</option>
                            <option value="1">9:00</option>
                            <option value="2">10:00</option>
                            <option value="3">11:00</option>
                          </select>
                    </div>
                    <div class="form-group col-sm-3">
                        <select class="custom-select">
                            <option selected>AM</option>
                            <option value="1">AM</option>
                            <option value="2">PM</option>
                          </select>
                    </div>
                  </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label for="professorMeetingInput">Profesor</label>
                        <input type="text" id="professorMeetingInput" class="form-control" value="Profesor" readonly>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="studentMeetingInput">Estudiante</label>
                        <select class="custom-select">
                            <option selected>--Estudiante--</option>
                            <option value="1">Kevin Verdezoto</option>
                            <option value="2">Daniela López</option>
                            <option value="3">Marco Arévalo</option>
                          </select>
                    </div>
                </div>
                <div class="form-container-btn">
                    <button type="submit" class="btn btn-primary">Crear Reunión</button>
                  </div>
            </form>
        </div>